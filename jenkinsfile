pipeline {
    agent any
    tools {
        maven 'my-maven'
        jdk 'my-jdk-17'
    }
    stages {
        stage('Clone') {
            steps {
                git url: 'https://github.com/Sanjug16/eureka-service-registry', branch: 'main'
            }
        }
        stage('pre-Build'){
            steps {
                bat "docker rm -f eureka-img"
            }
        }
        stage('Build') {
            steps {
                bat "mvn clean install -DskipTests"
            }
        }
        stage('Deploy') {
            steps {
                bat "docker build -t eureka-img ."
                bat "docker run -p 1761:8761 -d --name eureka-registry eureka-img"
            }
        }
    }
}
